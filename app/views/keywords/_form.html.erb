<%= form_tag({ action: :create }, multipart: true, class: 'mt-3') do %>
  <div class="form-group">
    <%= label_tag :file, 'Choose a CSV file', class: 'custom-file-label' %>
    <%= file_field_tag :file, class: 'form-control-file custom-file-input', accept: '.csv', required: true %>
  </div>

  <%= submit_tag 'Upload', class: 'btn btn-primary' %>
<% end %>